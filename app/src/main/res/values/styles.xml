<resources>

    <style name="SoapTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>

    <style name="SoapHeaderTextView" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SoapDetailField" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>
